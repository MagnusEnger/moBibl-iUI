{include file='html_header.tmpl' title=$config.lib.name theme=$config.lib.theme}

<div id="home">
	<div class="toolbar">
	<h1>{$config.lib.name}</h1>
	</div>
	<ul class="edgetoedge">
		<li class="arrow"><a href="#sok">Søk i katalogen</a></li>
		{foreach from=$config.lib.nav key=id item=nav}
		<li class="arrow"><a href="#{$config.lib.lib}_{$id}">{$nav.title}</a></li>
		{/foreach}
		<li class="arrow"><a href="#inst">Innstillinger</a></li>
		{if $config.debug}
		<li class="arrow"><a href="#debug">Debug</a></li>
		{/if}
	</ul>
	{$config.lib.frontpage}
</div>

<div id="sok">
    <div class="toolbar">
	<h1>Søk i katalogen</h1>
	<a class="button back" href="#">Tilbake</a>
	</div>
	<div>
	    <form method="post">
		<ul>
		<li><input placeholder="Forfatter, tittel, emne..." type="text" name="q" value="" /></li>
		<li><input type="submit" value="Søk" /></li>
		</ul>
	    </form>
	</div>
</div>

{foreach from=$config.lib.nav key=id item=nav}
<div id="{$config.lib.lib}_{$id}" class="{$nav.type}">
	<div class="toolbar">
	<h1>{$nav.title}</h1>
	<a class="button back" href="#">Tilbake</a>
	</div>
</div>
{/foreach}

<div id="inst" class="section">
	<div class="toolbar">
	<h1>Innstillinger</h1>
	<a class="button back" href="#">Tilbake</a>
	</div>
	<div class="content">
	    <form method="post">
		<ul>
		<li><select name="lib">
		      <option>Velg bibliotek...</option>
		      <option value="">Høgskolen i Gjøvik</option>
		    </select>
		</li>
		<li><input type="submit" value="Lagre" /></li>
		</ul>
	    </form>
	</div>
</div>

{if $config.debug}
<div id="debug" class="section">
	<div class="toolbar">
	<h1>Debug</h1>
	<a class="button back" href="#">Tilbake</a>
	</div>
	<div>
	</div>
</div>
{/if}

{include file='html_footer.tmpl'}